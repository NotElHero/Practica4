<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editNombreParticipante"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nombre del participante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewParticipantes"
        android:layout_width="274dp"
        android:layout_height="125dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/editNombreParticipante"
        app:layout_constraintStart_toStartOf="@+id/editNombreParticipante"
        app:layout_constraintTop_toBottomOf="@+id/editNombreParticipante" />

    <Button
        android:id="@+id/botonAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="aÃ±adir"
        app:layout_constraintEnd_toEndOf="@+id/viewParticipantes"
        app:layout_constraintStart_toStartOf="@+id/viewParticipantes"
        app:layout_constraintTop_toBottomOf="@+id/viewParticipantes" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="iniciar partida"
        app:layout_constraintEnd_toEndOf="@+id/botonAnadir"
        app:layout_constraintStart_toStartOf="@+id/botonAnadir"
        app:layout_constraintTop_toBottomOf="@+id/botonAnadir" />

    <Button
        android:id="@+id/botonCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="cancelar"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />
</androidx.constraintlayout.widget.ConstraintLayout>